<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="15dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="vertical"
        android:padding="8dp"
       android:background="@drawable/img_4">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="* Holidays *"
            android:textSize="20sp"
            android:layout_marginStart="150dp"
            android:textColor="#D3BE08" />
        <ImageView
            android:id="@+id/swipe2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="350dp"
            android:src="@drawable/swipe2"
            android:contentDescription="TODO" />

        <TextView
            android:layout_below="@+id/swipe2"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:text="Swipe"
            android:layout_marginStart="320dp" />
        <TextView
            android:id="@+id/date11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date: "
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/date11"
            android:fontFamily="@font/brawler"
            android:text="Date: "
            android:layout_marginStart="50dp"
            android:textColor="@color/white"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/occasion11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Occasion: "
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_below="@id/date"/>
        <TextView
            android:id="@+id/occasion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/brawler"
            android:text="Occasion: "
            android:layout_marginStart="50dp"
            android:textColor="@color/white"
            android:layout_below="@id/occasion11"
            android:textSize="20sp"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>



 

