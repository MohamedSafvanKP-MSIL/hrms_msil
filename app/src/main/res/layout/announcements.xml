<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="15dp">

    <androidx.cardview.widget.CardView
        android:layout_width="120dp"
        android:layout_height="20dp"
        app:cardCornerRadius="15dp"
        android:layout_below="@+id/recyclerview2"
        android:id="@+id/announcement"
        android:layout_marginStart="150dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Announcements"
            android:layout_marginStart="9dp"
            android:textColor="@color/black"/>
    </androidx.cardview.widget.CardView>




    <RelativeLayout
        android:layout_width="match_parent"

        android:layout_height="250dp"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="@drawable/img_6">


        <ImageView
            android:id="@+id/swipe1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="350dp"
            android:src="@drawable/swipe2"/>
        <TextView
            android:layout_below="@+id/swipe1"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:text="Swipe"
            android:textColor="@color/black"
            android:layout_marginStart="320dp" />



        <TextView
            android:id="@+id/date01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date: "

            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/date1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date: "

            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginStart="50dp"
            android:fontFamily="@font/brawler"

            android:layout_below="@+id/date01"/>



        <TextView
            android:id="@+id/title01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@+id/date1"
            android:text="Title: "
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />




        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title: "

            android:fontFamily="@font/brawler"
            android:textColor="@color/black"
            android:layout_marginStart="50dp"

            android:textSize="20sp"
            android:layout_below="@+id/title01"/>



        <TextView
            android:id="@+id/message01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Message: "

            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_below="@+id/title"/>

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Message: "

            android:fontFamily="@font/brawler"
            android:layout_marginStart="50dp"

            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_below="@+id/message01"/>


        <TextView
            android:id="@+id/priority01"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:text="Priority: "

            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_below="@+id/message"/>



        <TextView
            android:id="@+id/priority"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Priority: "

            android:fontFamily="@font/brawler"
            android:layout_marginStart="50dp"

            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_below="@+id/priority01"/>



    </RelativeLayout>

</androidx.cardview.widget.CardView>