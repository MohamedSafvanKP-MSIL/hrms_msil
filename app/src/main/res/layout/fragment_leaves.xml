<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">
    <TextView
        android:id="@+id/leaves"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/btn_outline"
        android:gravity="center_horizontal"
        android:text="LEAVES DETAILS"
        android:textColor="#000000"
        android:textSize="25dp" />

        <TextView
            android:id="@+id/tvSickLeave"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/leaves"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/baseline_check_box_outline_blank_24"
            android:gravity="center_horizontal"
            android:text="Sick Leave Details"
            android:textColor="#C1D5507C"
            android:textSize="20dp"
            android:textStyle="bold" />
    <LinearLayout
        android:id="@+id/sickLeaveContainer"
        android:layout_width="match_parent"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_height="wrap_content"
        android:background="@drawable/baseline_check_box_outline_blank_24"
        android:layout_below="@+id/tvSickLeave"
        android:layout_marginTop="10dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total Sick Leaves"
            android:background="@drawable/edittext_underline_black"
            android:textColor="@color/black"
            android:layout_below="@id/tvSickLeave"
            android:gravity="center_horizontal"/>

        <EditText
            android:id="@+id/etSickLeaveTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:enabled="false"
            android:focusable="false"
            android:gravity="center_horizontal"
            android:hint="Total Sick Leave"
            android:inputType="number"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <LinearLayout
            android:id="@+id/sickLeaveLayouttexts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/etSickLeaveUsedtv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:textColor="#000000"
                android:background="@drawable/edittext_underline_black"
                android:textSize="15dp"
                android:inputType="number"
                android:text="Used Sick Leave" />

            <TextView
                android:id="@+id/etSickLeaveLefttv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:background="@drawable/edittext_underline_black"
                android:enabled="false"
                android:textSize="15dp"
                android:focusable="false"
                android:inputType="number"
                android:text="Available Sick Leave" />
        </LinearLayout>

        <LinearLayout
        android:id="@+id/sickLeaveLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sickLeaveLayouttexts"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etSickLeaveUsed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:enabled="false"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:focusable="false"
            android:inputType="number"
            android:hint="Used Sick Leave" />

        <EditText
            android:id="@+id/etSickLeaveLeft"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:enabled="false"
            android:gravity="center_horizontal"
            android:textSize="15dp"
            android:focusable="false"
            android:inputType="number"
            android:hint="Sick Leave Left" />
        </LinearLayout>
    </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:text="Sick Leaves Usages chart"
            android:textColor="#9E385A"
            android:textStyle="bold" />


        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pieChartsl"
            android:layout_width="match_parent"
            android:layout_height="300dp" />

        <TextView
        android:id="@+id/tvCasualLeave"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="50dp"
        android:layout_below="@id/sickLeaveContainer"
        android:textColor="#C1D5507C"
        android:textStyle="bold"
        android:background="@drawable/baseline_check_box_outline_blank_24"
        android:text="Casual Leaves Details"
        android:gravity="center_horizontal"
        android:textSize="20dp" />

    <LinearLayout
        android:id="@+id/casualLeaveContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/baseline_check_box_outline_blank_24"
        android:layout_below="@+id/tvCasualLeave"
        android:layout_marginTop="10dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:background="@drawable/edittext_underline_black"
            android:text="Total Casual Leaves"
            android:layout_below="@id/tvCasualLeave"
            android:gravity="center_horizontal"/>
    <EditText
        android:id="@+id/etCasualLeaveTotal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvCasualLeave"
        android:layout_marginTop="1dp"
        android:enabled="false"
        android:focusable="false"
        android:gravity="center_horizontal"
        android:hint="Total Casual Leaves"
        android:inputType="number"
        android:textColor="@color/black"
        android:textSize="15dp" />

        <LinearLayout
            android:id="@+id/casualLeaveLayouttexts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/etCasualLeaveUsedtv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:enabled="false"
                android:background="@drawable/edittext_underline_black"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:focusable="false"
                android:inputType="number"
                android:text="Used Casual Leave" />

            <TextView
                android:id="@+id/etCasualLeaveLefttv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/edittext_underline_black"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:enabled="false"
                android:textSize="15dp"
                android:focusable="false"
                android:inputType="number"
                android:text="Available Sick Leaves" />
        </LinearLayout>
    <LinearLayout
        android:id="@+id/casualLeaveLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etCasualLeaveTotal"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etCasualLeaveUsed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:enabled="false"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:focusable="false"
            android:inputType="number"
            android:hint="Used Casual Leaves" />

        <EditText
            android:id="@+id/etCasualLeaveLeft"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:gravity="center_horizontal"
            android:enabled="false"
            android:textSize="15dp"
            android:focusable="false"
            android:inputType="number"
            android:hint="Casual Leaves Left" />
    </LinearLayout>
    </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:text="Casual Leaves Usages chart"
            android:textColor="#9E385A"
            android:textStyle="bold" />
        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pieChartcl"
            android:layout_width="match_parent"
            android:layout_height="300dp" />
    <TextView
        android:id="@+id/tvMedicalLeave"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/casualLeaveContainer"
        android:textColor="#C1D5507C"
        android:textStyle="bold"
        android:background="@drawable/baseline_check_box_outline_blank_24"
        android:text="Medical Leaves Details"
        android:layout_marginTop="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:gravity="center_horizontal"
        android:textSize="20dp" />

    <LinearLayout
        android:id="@+id/medicalLeaveContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/baseline_check_box_outline_blank_24"
        android:layout_below="@+id/tvMedicalLeave"
        android:layout_marginTop="10dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total Medical Leaves"
            android:background="@drawable/edittext_underline_black"
            android:textColor="@color/black"
            android:layout_below="@id/tvCasualLeave"
            android:gravity="center_horizontal"/>
    <EditText
        android:id="@+id/etMedicalLeaveTotal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvMedicalLeave"
        android:enabled="false"
        android:gravity="center_horizontal"
        android:textColor="@color/black"
        android:focusable="false"
        android:inputType="number"
        android:textSize="15dp"
        android:hint="Total Medical Leaves" />
        <LinearLayout
            android:id="@+id/medicalLeaveLayouttexts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/etCasualLeaveTotal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/etMedicalLeaveUsedtv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/edittext_underline_black"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:text="Used Medical leeaves"/>

            <TextView
                android:id="@+id/etMedicalLeaveLefttv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/edittext_underline_black"
                android:textColor="@color/black"
                android:gravity="center_horizontal"
                android:enabled="false"
                android:textSize="15dp"
                android:focusable="false"
                android:inputType="number"
                android:text="Available Medical Leaves" />
        </LinearLayout>
    <LinearLayout
        android:id="@+id/medicalLeaveLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etMedicalLeaveTotal"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etMedicalLeaveUsed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:enabled="false"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:focusable="false"
            android:inputType="number"
            android:hint="Used Medical Leaves" />

        <EditText
            android:id="@+id/etMedicalLeaveLeft"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:textColor="@color/black"
            android:enabled="false"
            android:textSize="15dp"
            android:focusable="false"
            android:inputType="number"
            android:hint="Medical Leaves" />
    </LinearLayout>
</LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:text="Medical Leaves Usages chart"
            android:textColor="#9E385A"
            android:textStyle="bold" />
        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pieChartml"
            android:layout_width="match_parent"
            android:layout_height="300dp"/>

        <Button
            android:id="@+id/btnApplyLeave"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@id/medicalLeaveContainer"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/btn_outline"
            android:text="Apply For Leave"
            android:textColor="@color/black"
            android:textStyle="bold" />

    </LinearLayout>
</ScrollView>